<div class="uk-padding-large uk-child-width-1-1" uk-grid>
  {{#if pageInfo.hasPrevPage}}
      <a href={{pageInfo.prevLink}}><< Anterior</a>
  {{/if}}
  &nbsp;
  {{pageInfo.page}}
  &nbsp;
    {{#if pageInfo.hasNextPage}}
      <a href={{pageInfo.nextLink}}>Siguiente >></a>
  {{/if}} 
</div>

<div id="products" class="uk-child-width-1-4@m" uk-grid>
  {{#each products}}
    <div>
      <div class="uk-card uk-card-default">
        <div class="uk-card-media-top">
          <img alt="foto producto" />
        </div>
        <div class="uk-card-body">
          <h3 class="uk-card-title">{{ this.title }}</h3>
          <h5>USD ${{this.price}}</h5>
          {{#each this.keywords}}
            <span class="uk-badge">{{this}}</span>
          {{/each}}
          <p>{{this.description}}</p>
          <div>
               <form action="/products" method="POST">
                <input type="hidden" name="productId" value="{{_id}}">
                <input type="hidden" name="title" value="{{title}}">
                <input type="hidden" name="price" value="{{price}}">
                <input type="hidden" name="description" value="{{description}}">
                <input type="hidden" name="stock" value="{{stock}}">
                <button type="submit">Agregar al carrito</button>
              </form>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>