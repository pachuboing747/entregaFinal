<div id="realTimeProducts" class="uk-child-width-1-4@m" uk-grid>
  {{#each products}}
    <div>
      <div class="uk-card uk-card-default">
        <div class="uk-card-media-top">
          <img alt="foto producto" />
        </div>
        <div class="uk-card-body">
          <h3 class="uk-card-title">{{ this.title }}</h3>
          <h5>USD ${{this.price}}</h5>
          {{#each this.keywords}}
            <span class="uk-badge">{{this}}</span>
          {{/each}}
          <p>{{this.description}}</p>
         <div>
          <form action="/products" method="POST">
            <input type="hidden" name="productId" value="{{_id}}">
            <input type="hidden" name="title" value="{{title}}">
            <input type="hidden" name="price" value="{{price}}">
            <input type="hidden" name="description" value="{{description}}">
            <input type="hidden" name="stock" value="{{stock}}">
            <button type="submit">Agregar al carrito</button>
          </form>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>